{
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=loan_db;Username=loan_user;Password=loan_password"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topic": "loan_events",
    "DlqTopic": "loan_events_dlq",
    "GroupId": "analytics-service-group",
    "MaxRetries": 3,
    "RetryDelayMs": 1000
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  }
}